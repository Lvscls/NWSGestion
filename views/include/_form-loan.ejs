  <div class="new_material">
    <div class="form-group">
      <label for="Students" class="text-light">Eleve</label>
      <select name="idStudent" id="idStudent">
        <% for(var i=0; i< users.length; i++) { %> {%>
        <option value="<%= users[i].id %>"><%= users[i].prenom %></option>
        <% } %>
      </select>
    </div>
    <div class="form-group">
      <label for="startDate" class="text-light">Date du prÃªt</label>
      <input type="date" name="startDate" value="" />
    </div>
    <div class="form-group">
      <label for="endDate" class="text-light">Date de fin</label>
      <input type="date" name="endDate" value="" />
    </div>
    <div class="form-group">
      <label for="Materiel" class="text-light">Materiel</label>
