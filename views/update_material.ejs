<!--include header-->
<%- include('include/_header') %>
<!--/include header-->

<!--Main section-->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"
          ><i class="fas fa-angle-double-left"></i>Tous les materiels</a
        >
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Modifier materiel</h2>
      <span class="text-light"
        >Modifier un materiel grâce au formulaire ci-dessous</span
      >
    </div>
    <!--add material form-->
       <!-- form handling-->
       <form method="POST" id="update_material">
        <div class="new_material">
          <div class="form-group">
            <label for="reference" class="text-light">Référence</label>
            <input type="hidden" name="id" value="<%= material._id %>" />
            <input
              type="text"
              name="reference"
              value="<%= material.reference %>"
              placeholder="Macbook Air m2"
            />
          </div>
          <div class="form-group">
            <label for="description" class="text-light">Description</label>
            <input
              type="text"
              name="description"
              value="<%= material.description %>"
              placeholder="Ordinateur portable mac"
            />
          </div>
          <div class="form-group">
            <label for="statut" class="text-light">Description</label>
            <div class="radio inline">
              <input type="radio" id="radio-2" name="statut" value="true" <%= material.statut == true?'checked':''%> >
              <label for="radio-2" class="radio-label">En prêt</label>
            </div>
            <div class="radio inline">
              <input type="radio" name="statut" id="radio-3" value="false" <%= material.statut == false?'checked':''%> >
              <label for="radio-3" class="radio-label">En stock</label>
            </div>
          </div>
  
          <div class="form-group">
            <button type="submit" class="btn text-dark update">
              Enregistrer
            </button>
          </div>
        </div>
      </form>
      <!--/form handling-->
    <!--/add material form-->
  </div>
</main>
<!--/Main section-->

<!--include footer-->
<%- include('include/_footer') %>
<!--/include footer-->
